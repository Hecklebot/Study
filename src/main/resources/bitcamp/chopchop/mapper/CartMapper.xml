  <select id="findAll" resultMap="CartMap">
    select
      cart_id,
      member_id,
      product_id,
      quantity,
      created_date
    from 
      cart    
    order by cart_id desc
  </select>
  
  <select id="findBy" parameterType="int" resultMap="CartMap">
    select
      cart_id,
      member_id,
      product_id,
      quantity,
      created_date
    from
      cart
    where
      cart_id=#{value}
  </select>
